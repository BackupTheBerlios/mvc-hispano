<mvchispano-config>

	<rewrite-rules>
	<!--
	Put here the rules for rewrite the url, example:

	<rule pattern="/" path="welcome.php" />
	<rule pattern="/(\w+)\.html" path="$1.php" />
	-->
	</rewrite-rules>

	<action-mappings>
	<!--
	Put here the actions an his forwards, example:

	<action path="/" type="welcome.html" />
	<action path="/checkData" type="action.CheckData">
		<forward name="success" path="valid.html"/>
		<forward name="failed" path="novalid.html"/>
	</action>
	<action path=".*" type="404.html" />
	-->
	</action-mappings>

</mvchispano-config>